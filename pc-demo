#!/bin/bash
# Quick demo runner

set -e

DEMO=${1:-viz}

case "$DEMO" in
    simple)
        cargo run --bin demo_simple
        ;;
    ascii)
        cargo run --bin demo_ascii
        ;;
    viz)
        cargo run --features viz --bin demo_viz
        ;;
    *)
        echo "Usage: pc-demo [simple|ascii|viz]"
        echo "  simple - Console output"
        echo "  ascii  - Terminal visualization"
        echo "  viz    - 3D wireframe (default)"
        exit 1
        ;;
esac